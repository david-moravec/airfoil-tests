FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,U)                      bounded Gauss Minmod Gauss linearUpwind grad(U);

    div(phi,R)                      bounded Gauss Minmod Gauss linearUpwind grad(R);
    div(phi,gamma)                  bounded Gauss Minmod Gauss linearUpwind grad(gamma);
	//div(phi,R)      		bounded Gauss upwind; // use upwinding for the
	//div(phi,gamma) 			bounded Gauss upwind; // turbulent quantities

    div(phi,nuTilda)                bounded Gauss Minmod;
    div((nuEff*dev2(T(grad(U)))))   Gauss linear;
    div(nonlinearStress)            Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear limited corrected 0.33;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         limited corrected 0.33;
}

wallDist
{
    method meshWave;
}


// ************************************************************************* //
